{
  "name": "CommerceCoreGraph",
  "version": "0.0.7",    
  "author": "nrkapoor",
  "description": "Adobe Commerce Core",
  "variables": {
    "ENDPOINT_URL": {
      "name": "CommerceCoreGraph API",
      "description": "This URL will be used to query the CommerceCoreGraph Graphql",
      "type": "string"      
    }
  },
  "provider": {
    "name": "CommerceCoreGraph",
    "handler": {
      "graphql": {
        "endpoint": "${ENDPOINT_URL}"
      }
    },    
    "transforms": [
      {
        "filterSchema": {
          "mode": "bare",
          "filters": [
            "Query.!category",
            "Query.!customerOrders",
            "Query.!urlResolver",
            "Query.!wishlist",
            "Query.!categoryList",
            "Mutation.!setPaymentMethodAndPlaceOrder",
            "Mutation.!addBundleProductsToCart",
            "Mutation.!addConfigurableProductsToCart",
            "Mutation.!addDownloadableProductsToCart",
            "Mutation.!addSimpleProductsToCart",
            "Mutation.!addVirtualProductsToCart",
            "Mutation.!createCustomer",
            "Mutation.!updateCustomer"
          ]
        }
      }
    ]
  },
  "files": [
    {
      "path": "./product-extension-complex-field.json",
      "content": "{\"$ref\": \"#/definitions/IoRuntimeComplexProductExtension\",\"definitions\": {\"IoRuntimeComplexProductExtension\": {\"type\": \"object\",\"title\": \"Complex product extension\",\"description\": \"Complex product extension field\",\"properties\": {\"fieldA\": {\"type\": \"string\"},\"fieldB\": {\"type\": \"string\"}}}}}"
    }
  ]
}
